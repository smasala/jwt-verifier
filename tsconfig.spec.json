{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist_spec",
    "sourceMap": true,
    "sourceRoot": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es6", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
      "src/**/*.ts",
      "spec/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
}
